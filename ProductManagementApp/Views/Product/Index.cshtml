@model IEnumerable<ProductManagementApp.Models.Product>

@{
    ViewData["Title"] = "Product List";
    int sn = 1;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Product List</h2>
        <a asp-action="Create" class="btn btn-primary">Add Product</a>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>SN</th>
                <th>Product</th>
                <th>Description</th>
                <th>Price</th>
                <th>Created</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(sn++)</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("N0") MMK</td>
                    <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>